
{
    "manifest_version": 2,
    "name": "YouTube Scheduler",
    "version": "1.0",
    "description": "Adds a Schedule option to YouTube videos.",
    "permissions": ["activeTab"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "16.png",
        "48": "48.png",
        "128": "128.png"
      }
    }
  }
  